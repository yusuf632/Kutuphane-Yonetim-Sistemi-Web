@{
    ViewData["Title"] = "Kitap mevcut değil";
    var errorMessage = ViewBag.ErrorMessage as string;
}

<div class="container text-center mt-5">
    <h1 class="display-4 text-warning">Kitap mevcut değil</h1>
    <p class="lead">
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            @errorMessage
        }
        else
        {
            <text>Ödünç vermeye çalıştığınız kitap şu anda mevcut değil.</text>
        }
    </p>
    <a asp-action="Index" asp-controller="Books" class="btn btn-primary">Kitap listesine geri dön</a>
</div>