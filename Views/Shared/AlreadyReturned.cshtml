@{
    ViewData["Title"] = "Kitap çoktan iade edildi";
    var errorMessage = ViewBag.ErrorMessage as string;
}

<div class="container text-center mt-5">
    <h1 class="display-4 text-info">Kitap çoktan iade edildi</h1>
    <p class="lead">
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            @errorMessage
        }
        else
        {
            <text>Bu kitabın ödünç kaydı çoktan iade edilmiştir.</text>
        }
    </p>
    <a asp-action="Index" asp-controller="Books" class="btn btn-primary">Kitap listesine geri dön</a>
</div>